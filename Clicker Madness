--// Services
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

--// Orion Library
local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "Madness Clicker GUI", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionConfigs"})

--// Variables
_G.Autoclicker = false
_G.GroupChest = false
_G.DailyChest = false
_G.ClickMultiplier = false
_G.CursorDamage = false
_G.Health = false
_G.JumpUpgrade = false
_G.SpeedUpgrade = false
_G.PetStorage = false
_G.BossHit = false
_G.TwoxDamage = false
_G.XtwoHealth = false
_G.PetSlots = false
_G.SuperPetStorage = false

--// Main Tab
local Tab = Window:MakeTab({
	Name = "Automations",
	Icon = "rbxassetid://122341342375300",
	PremiumOnly = false
})

local Section = Tab:AddSection({
	Name = "Autofarm"
})

Tab:AddToggle({
    Name = "Autoclicker",
	Default = false,
    Callback = function(state)
        _G.Autoclicker = state

        while _G.Autoclicker do
            local args = {[1] = 1}
            ReplicatedStorage.Aero.AeroRemoteServices.ClickService.Click:FireServer(unpack(args))
            task.wait()
        end
    end
})

local Section = Tab:AddSection({
	Name = "Chests"
})

Tab:AddButton({
    Name = "Claim Group Chest (Join group first)",
    Callback = function()
        local args = {[1] = "group1"}
        ReplicatedStorage.Aero.AeroRemoteServices.ChestService.OpenChest:FireServer(unpack(args))
    end
})

Tab:AddButton({
    Name = "Claim Daily Chest",
    Callback = function()
        local args = {[1] = "ChestOpens"}
        ReplicatedStorage.Aero.AeroRemoteServices.DataService.Get:InvokeServer(unpack(args))
    end
})

Tab:AddToggle({
    Name = "Auto Claim Group Chest",
    Default = false,
    Callback = function(state)
        _G.GroupChest = state

        while _G.GroupChest do
            local args = {[1] = "group1"}
            ReplicatedStorage.Aero.AeroRemoteServices.ChestService.OpenChest:FireServer(unpack(args))
            task.wait(5)
        end
    end
})

Tab:AddToggle({
    Name = "Auto Claim Daily Chest",
    Default = false,
    Callback = function(state)
        _G.DailyChest = state

        while _G.DailyChest do
            local args = {[1] = "ChestOpens"}
            ReplicatedStorage.Aero.AeroRemoteServices.DataService.Get:InvokeServer(unpack(args))
            task.wait(5)
        end
    end
})

-- Add similar sections for Upgrades and Super Upgrades as in the original script.

OrionLib:Init()
